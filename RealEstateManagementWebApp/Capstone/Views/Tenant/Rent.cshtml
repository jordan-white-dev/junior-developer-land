@model Capstone.Models.Payment

@{
    ViewData["Title"] = "Payments";
}

<br />
<div class="w3-container">
    <h2><strong>Pay Rent</strong></h2>
    <div class="w3-row w3-large">

        <form asp-controller="Tenant" asp-action="Rent">
            <div asp-validation-summary="ModelOnly"></div>
            <hr />
            <div class="w3-row">
                <div class="form-group w3-col" style="width:15%">
                    <div class="w3-col s10">
                        <label asp-for="UnitID" class="control-label"></label>
                        <input asp-for="UnitID" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="UnitID" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="w3-row">
                <div class="form-group w3-col" style="width:25%">
                    <div class="w3-col s10">
                        <label asp-for="TenantID" class="control-label"></label>
                        <input asp-for="TenantID" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="TenantID" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="w3-row">
                <div class="form-group w3-col" style="width:25%">
                    <div class="w3-col s10">
                        <label asp-for="PaymentAmount" class="control-label"></label>
                        <input asp-for="PaymentAmount" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="PaymentAmount" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="w3-row">
                <div class="form-group w3-col" style="width:30%">
                    <div class="w3-col s10">
                        <label asp-for="PaymentForMonth" class="control-label"></label>
                        <input asp-for="PaymentForMonth" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="PaymentForMonth" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="w3-row">
                <div class="form-group w3-col">
                    <input type="submit" value="Submit" class="w3-button w3-green w3-left-align" />
                </div>
            </div>
        </form>









