@model Capstone.Models.Application

@{
    ViewData["Title"] = "Apply";
}

<br />
<div class="w3-container">
    <p style="width:50%; margin-bottom:-7px;"><strong>By submitting, you agree to all terms and conditions and allow CNJ Managment to use the provided information to perform a background check.</strong></p>
    <div class="w3-row w3-large">
        <form asp-controller="Home" asp-action="Apply">
            <div asp-validation-summary="ModelOnly"></div>
            <hr />
            <div class="w3-row" style="margin-top:-25px;">
                <h3><strong>Personal information:</strong></h3>
            </div>
            <div class="w3-row">
                <div class="form-group w3-col" style="width:15%">
                    <div class="w3-col s10">
                        <label asp-for="UnitID" class="control-label"></label>
                        <input asp-for="UnitID" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="UnitID" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group w3-col" style="width:15%">
                    <div class="w3-col s10">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group w3-col" style="width:15%">
                    <div class="w3-col s10">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="w3-row">
                <div class="form-group w3-col" style="width:20%">
                    <div class="w3-col s10">
                        <label asp-for="SocialSecurityNumber" class="control-label"></label>
                        <input asp-for="SocialSecurityNumber" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="SocialSecurityNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group w3-col" style="width:25%">
                    <div class="w3-col s10">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group w3-col" style="width:30%">
                    <div class="w3-col s10">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="w3-row" style="margin-top:-25px;">
                <h3><strong>Previous residence:</strong></h3>
            </div>
            <div class="w3-row">
                <div class="form-group w3-col" style="width:20%">
                    <div class="w3-col s10">
                        <label asp-for="LastResidenceOwner" class="control-label"></label>
                        <input asp-for="LastResidenceOwner" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="LastResidenceOwner" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group w3-col" style="width:25%">
                    <div class="w3-col s10">
                        <label asp-for="LastResidenceContactPhoneNumber" class="control-label"></label>
                        <input asp-for="LastResidenceContactPhoneNumber" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="LastResidenceContactPhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group w3-col" style="width:15%">
                    <div class="w3-col s10">
                        <label asp-for="LastResidenceTenancyStartDate" class="control-label"></label>
                        <input asp-for="LastResidenceTenancyStartDate" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="LastResidenceTenancyStartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group w3-col" style="width:15%">
                    <div class="w3-col s10">
                        <label asp-for="LastResidenceTenancyEndDate" class="control-label"></label>
                        <input asp-for="LastResidenceTenancyEndDate" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="LastResidenceTenancyEndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="w3-row" style="margin-top:-25px;">
                <h3><strong>Employment:</strong></h3>
            </div>
            <div class="w3-row">
                <div class="form-group w3-col" style="width:30%">
                    <div class="w3-col s10 checkbox">
                        <label style="font-weight:bold;">
                            <input asp-for="EmploymentStatus" /> @Html.DisplayNameFor(model => model.EmploymentStatus)
                        </label>
                    </div>
                </div>
            </div>
            <div class="w3-row">
                <div class="form-group w3-col" style="width:20%">
                    <div class="w3-col s10">
                        <label asp-for="EmployerName" class="control-label"></label>
                        <input asp-for="EmployerName" class="w3-input w3-border" />
                        <span asp-validation-for="EmployerName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group w3-col" style="width:25%">
                    <div class="w3-col s10">
                        <label asp-for="EmployerContactPhoneNumber" class="control-label"></label>
                        <input asp-for="EmployerContactPhoneNumber" class="w3-input w3-border" />
                        <span asp-validation-for="EmployerContactPhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group w3-col" style="width:15%">
                    <div class="w3-col s10">
                        <label asp-for="AnnualIncome" class="control-label"></label>
                        <input asp-for="AnnualIncome" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="AnnualIncome" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="w3-row" style="margin-top:-25px;">
                <h3><strong>Details:</strong></h3>
            </div>
            <div class="w3-row">
                <div class="form-group w3-col" style="width:20%">
                    <div class="w3-col s10">
                        <label asp-for="NumberOfResidents" class="control-label"></label>
                        <input asp-for="NumberOfResidents" class="w3-input w3-border" />
                        <span asp-validation-for="NumberOfResidents" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group w3-col" style="width:20%">
                    <div class="w3-col s10">
                        <label asp-for="NumberOfCats" class="control-label"></label>
                        <input asp-for="NumberOfCats" class="w3-input w3-border" />
                        <span asp-validation-for="NumberOfCats" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group w3-col" style="width:20%">
                    <div class="w3-col s10">
                        <label asp-for="NumberOfDogs" class="control-label"></label>
                        <input asp-for="NumberOfDogs" class="w3-input w3-border" style="vertical-align:bottom" />
                        <span asp-validation-for="NumberOfDogs" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="w3-row">
                <div class="form-group w3-col">
                    <input type="submit" value="Submit" class="w3-button w3-green w3-left-align" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}